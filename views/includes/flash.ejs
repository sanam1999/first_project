<% if(success && success.length){ %>
<div class="alert alert-success col-6 alert-dismissible fade show offset-3">

    <%= success %>
<div type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></div>
</div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert alert-danger col-6 alert-dismissible fade show offset-3">

        <%= error%>
            <div type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></div>
    </div>
    <% } %>